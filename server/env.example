# Application Configuration
NODE_ENV=development
PORT=3000
WEBSOCKET_PORT=3001

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/chess_arena

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=http://localhost:3000
WEBSOCKET_PATH=/ws

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000
QUEUE_REMOVE_ON_COMPLETE=100
QUEUE_REMOVE_ON_FAIL=50

# Event Configuration
EVENT_MAX_LISTENERS=20

# AWS S3 Configuration (Optional)
AWS_REGION=us-east-1
AWS_BUCKET_NAME=chess-arena-uploads
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
PAPERTRAIL_HOST=logs.papertrailapp.com
PAPERTRAIL_PORT=12345
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Monitoring Configuration
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=admin123
REDIS_COMMANDER_USERNAME=admin
REDIS_COMMANDER_PASSWORD=admin123

# Chess AI Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Security
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true




